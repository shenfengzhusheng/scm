<mapper namespace="org.xfs.scm.business.bd.area.dao.AreaMapper" >
  <resultMap id="BaseResultMap" type="org.xfs.scm.business.bd.area.entity.Area" >
    <id column="area_code" property="areaCode" jdbcType="VARCHAR" />
    <result column="area_name" property="areaName" jdbcType="VARCHAR" />
    <result column="area_name_py" property="areaNamePy" jdbcType="VARCHAR" />
    <result column="area_name_short" property="areaNameShort" jdbcType="VARCHAR" />
    <result column="area_level" property="areaLevel" jdbcType="INTEGER" />
    <result column="parent_area_code" property="parentAreaCode" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    area_code, area_name, area_name_py, area_name_short, area_level, parent_area_code
  </sql>
  <select id="getAreas" resultMap="BaseResultMap" parameterType="org.xfs.scm.business.bd.area.vo.AreaVo" >
    SELECT
      <include refid="Base_Column_List" />
    FROM tb_area
    <trim prefix="WHERE" prefixOverrides="AND |OR ">
        <if test="q!=null ">
          AND area_name like CONCAT('%',#{q,jdbcType=VARCHAR},'%')
        </if>
        <if test="areaName!=null and areaName!='' ">
          AND area_name like CONCAT('%',#{areaName,jdbcType=VARCHAR},'%') 
        </if>
       <if test="areaCode!=null and areaCode!='' ">
          AND area_code like  CONCAT ('%',#{areaCode,jdbcType=VARCHAR},'%')           
       </if>
      <if test="parentAreaCode!=null and parentAreaCode!=0 ">
          AND parent_area_code like CONCAT('%',#{parentAreaCode,jdbcType=VARCHAR},'%') 
      </if>
      <if test="areaLevel!=null">
         AND area_level = #{areaLevel,jdbcType=INTEGER}
      </if>
      <if test="areaLevelWithOpt!=null">
        AND area_level != 3
      </if>
    </trim>
  </select>
  <delete id="removeArea" parameterType="org.xfs.scm.business.bd.area.vo.AreaVo" >
    DELETE FROM tb_area  WHERE area_code = #{areaCode,jdbcType=VARCHAR}
  </delete>
